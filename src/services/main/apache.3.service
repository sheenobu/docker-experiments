[Unit]
Description=Apache instance 3
After=docker.service
Requires=docker.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=0
ExecStartPre=-/opt/docker/bin/docker kill apache.3
ExecStartPre=-/opt/docker/bin/docker rm apache.3
ExecStart=/opt/docker/bin/docker run --name apache.3 -p 8087:80 local/apache2
ExecStop=/opt/docker/bin/docker stop -t 20 apache.3
